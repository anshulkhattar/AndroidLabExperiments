<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Experiments"
        android:textSize="30dp"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="92dp"
        android:layout_weight=".28"
        android:background="@drawable/spinner_border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp" android:layout_marginRight="23dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" android:layout_marginBottom="237dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="149dp"
        >

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"/>

        <ImageView
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:src="@drawable/ic_expand_more_black_24dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>